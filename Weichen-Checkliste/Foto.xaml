<Window x:Class="WpfWebcamApp.FotoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Webcam App" Height="400" Width="400">
    <Grid>
        <!-- PictureBox-ähnliche Anzeige für das Kamerabild -->
        <Image Name="cameraFeed" Stretch="Fill"  VerticalAlignment="Top" Height="300" Width="300" />

        <!-- Buttons zum Starten/Stoppen der Kamera und zum Aufnehmen eines Fotos -->
        <Button Name="startButton" Content="Kamera Starten" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10" Click="StartButton_Click" />
        <Button Name="captureButton" Content="Foto Aufnehmen" HorizontalAlignment="center" VerticalAlignment="Bottom" Margin="10" Click="CaptureButton_Click" />
        <Button Name="stopButton" Content="Kamera Stoppen" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10" Click="StopButton_Click" />

    </Grid>
</Window>
